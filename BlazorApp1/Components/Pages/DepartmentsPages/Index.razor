@page "/departments"

@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using BlazorApp1.Models
@inject IDbContextFactory<BlazorApp1.Data.ApplicationDbContext> DbFactory

<PageTitle>Departments</PageTitle>

<h1>Departments</h1>

<p>
    <a href="departments/create"><i class="fa-solid fa-plus"></i></a>
</p>

<QuickGrid Class="table" Items="DbFactory.CreateDbContext().Departments">
    <PropertyColumn Property="departments => departments.Name" />

    <TemplateColumn Context="departments">
        <a href="@($"departments/edit?id={departments.Id}")"><i class="fa-regular fa-pen-to-square"></i></a> |
        <a href="@($"departments/details?id={departments.Id}")"><i class="fa-solid fa-info"></i></a> |
        <a href="@($"departments/delete?id={departments.Id}")"><i class="fa-solid fa-trash"></i></a>
    </TemplateColumn>
</QuickGrid>
