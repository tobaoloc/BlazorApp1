@page "/students"

@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using BlazorApp1.Models
@inject IDbContextFactory<BlazorApp1.Data.ApplicationDbContext> DbFactory

<PageTitle>Manage Students</PageTitle>

<h1>Manage Students</h1>

<p>
    <a href="users/create"><i class="fa-solid fa-plus"></i></a>
</p>

<QuickGrid Class="table" Items="@(DbFactory.CreateDbContext().ApplicationUser.Where(u => u.Role.Equals("Students")))">
    <PropertyColumn Property="users => users.Name" />
    <PropertyColumn Property="users => users.Code" />
    <PropertyColumn Property="users => users.PhoneNumber" />
    <PropertyColumn Property="users => users.Email" />
    <PropertyColumn Property="users => users.Role" />

    <TemplateColumn Context="users">
        <a href="@($"users/edit?id={users.Id}")"><i class="fa-regular fa-pen-to-square"></i></a> |
        <a href="@($"users/details?id={users.Id}")"><i class="fa-solid fa-info"></i></a> |
        <a href="@($"users/delete?id={users.Id}")"><i class="fa-solid fa-trash"></i></a>
    </TemplateColumn>
</QuickGrid>
